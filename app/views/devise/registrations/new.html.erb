<div class="session-logo">
    <h1 id="session-h1">iSulat</h1>

    <h2 id="session-h2">Philippine's No.1 To-do List App!</h2>

<div class="session-new">


<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"session-field",
  placeholder:"Email" %><br><br>

  <%= f.password_field :password, autocomplete: "new-password", class:"session-field",
  placeholder:"Create Password" %><br><br>

  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"session-field",
  placeholder:"Confirm Password" %><br><br>
  

  <% if devise_mapping.rememberable? %>
    
    <%= f.check_box :remember_me, class:"session-remember" %>
    <%= f.label :remember_me %><br>
  
  <% end %>

  <%= link_to "Have an account already? Sign In.", new_user_session_path, class:"session-link" %><br>

  <div class="actions">
    <%= f.submit "Create Account", class:"signin-btn" %>
  </div>
<% end %>

</div>
